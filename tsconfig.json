{
    "include": ["src"],
    "compilerOptions": {
        "module": "nodenext",
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "strict": true,
        "moduleResolution": "node16",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "rootDir": "src"
    }
}
